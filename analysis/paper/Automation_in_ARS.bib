@article{bevan_data_2015,
	title = {The data deluge},
	volume = {89},
	issn = {1745-1744},
	url = {https://www.cambridge.org/core/article/data-deluge/D77DE6754E82D6972581F95541EC23F6},
	doi = {10.15184/aqy.2015.102},
	abstract = {Archaeology has wandered into exciting but daunting territory. It faces floods of new evidence about the human past that are largely digital, frequently spatial, increasingly open and often remotely sensed. The resulting terrain is littered, both with data that are wholly new and data that were long known about but previously considered junk. This paper offers an overview of this diluvian information landscape and aims to foster debate about its wider disciplinary impact. In particular, I would argue that its consequences: a) go well beyond the raw challenges of digital data archiving or manipulation and should reconfigure our analytical agendas; b) can legitimately be read for both utopian and dystopian disciplinary futures; and c) re-expose some enduring tensions between archaeological empiricism, comparison and theory-building.},
	number = {348},
	journal = {Antiquity},
	author = {Bevan, Andrew},
	year = {2015},
	pages = {1473--1484},
}

@article{casana_regional-scale_2014,
