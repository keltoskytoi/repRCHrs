	pages = {659--669},
	file = {IEEE Xplore Abstract Record:/home/keltoskytoi/Zotero/storage/HSESQDVL/6378408.html:text/html;Submitted Version:/home/keltoskytoi/Zotero/storage/V4K2NKNY/Cavalli et al. - 2013 - Detection of Anomalies Produced by Buried Archaeol.pdf:application/pdf;IEEE Xplore Abstract Record:/home/keltoskytoi/Zotero/storage/EGY5D6PR/6378408.html:text/html},
